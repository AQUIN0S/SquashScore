<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.squashscore.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/player_layouts">

            <TextView
                android:text="@string/player_1"
                style="@style/player_name_style" />

            <TextView
                android:id="@+id/score_player_1"
                android:text="@string/score_player_1"
                style="@style/score_style" />

            <Button
                android:id="@+id/add_point_player_1"
                android:text="@string/add_point_button"
                style="@style/score_button_p1_style" />

            <Button
                android:id="@+id/take_point_player_1"
                android:text="@string/take_point_button"
                style="@style/score_button_p1_style" />

            <LinearLayout style="@style/games_layout_style">

                <Button
                    android:id="@+id/take_game_player_1"
                    android:text="@string/take_point_button"
                    style="@style/game_button_style_p1" />

                <TextView
                    android:text="@string/games_player_1"
                    style="@style/game_text_style" />

                <Button
                    android:id="@+id/add_game_player_1"
                    android:text="@string/add_point_button"
                    style="@style/game_button_style_p1" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout style="@style/player_layouts">

            <TextView
                style="@style/player_name_style"
                android:text="@string/player_2" />

            <TextView
                android:text="@string/score_player_2"
                style="@style/score_style" />

            <Button
                android:id="@+id/add_point_player_2"
                android:text="@string/add_point_button"
                style="@style/score_button_p2_style" />

            <Button
                android:id="@+id/take_point_player_2"
                android:text="@string/take_point_button"
                style="@style/score_button_p2_style" />

            <LinearLayout style="@style/games_layout_style">

                <Button
                    android:id="@+id/take_game_player_2"
                    android:text="@string/take_point_button"
                    style="@style/game_button_style_p2" />

                <TextView
                    android:text="@string/games_player_2"
                    style="@style/game_text_style" />

                <Button
                    android:id="@+id/add_game_player_2"
                    android:text="@string/add_point_button"
                    style="@style/game_button_style_p2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="@string/reset_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"/>

</RelativeLayout>
